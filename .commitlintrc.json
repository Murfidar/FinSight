{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["chore", "feat", "fix", "refactor", "test", "docs"]
    ],
    "scope-enum": [2, "always", ["frontend", "backend", "root"]],
    "subject-case": [2, "always", ["sentence-case", "lower-case"]],
    "header-max-length": [2, "always", 100]
  }
}
